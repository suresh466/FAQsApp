@* set expected type of model *@
@model IEnumerable<Faq>

@{
    ViewData["Title"] = "Faqs - Home";

    @* function to set active class for links *@
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}

<div class="jumbotron bg-info">
    <h1 class="text-white text-center">Frequently Asked Questions</h1>
</div>

<div class="row">
    <!-- Bootstrap list for categories -->
    <div class="col-md-3 mt-5">
        <div class="list-group mt-2">
            <!-- We're looping through each category and creating a link with appropriate paramenters for it -->
            @foreach (Category category in ViewBag.Categories)
            {
                @* only set the activeTopic parameter if it is not all, i.e it is set to a specific topic *@
                <a asp-controller="Home"
                   aps-action="Index"
                   asp-route-activeCategory="@category.CategoryId"
                   asp-route-activeTopic="@(ViewBag.ActiveTopic != "all" ? ViewBag.ActiveTopic : null)"
                   class="list-group-item @Active(category.CategoryId, ViewBag.ActiveCategory)">
                    @category.Name
                </a>
            }
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            <!-- Giving 12 col to each element makes sure they takeup all available space, resulting in stacked elements-->
            <div class="col-md-12">
                @* Bootstrap navbar for topics *@
                <nav class="navbar navbar-expand navbar-light">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">

                            @* for all faqs just plainly hit the root route without any parameters *@
                            <li class="nav-item">
                                <a href="/" class="btn btn-info">All FAQs</a>
                            </li>
                            <!-- We're looping through each topic and creating a link for it with appropriate paramenters just like categories -->
                            @foreach (var topic in ViewBag.Topics)
                            {
                                @* only set the activeCategory parameter if it is not all, i.e it is set to a specific category *@
                                <li class="nav-item">
                                    <a asp-a-controller="Home"
                                       asp-action="Index"
                                       asp-route-activeCategory="@(ViewBag.ActiveCategory != "all" ? ViewBag.ActiveCategory : null)"
                                       asp-route-activeTopic="@topic.TopicId"
                                       class="nav-link @Active(topic.TopicId, ViewBag.ActiveTopic)">
                                        @topic.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </div>

            <!-- Questions are shown here in a card-->
            <div class="col-md-12">
                <!-- We're looping through each question and displaying it in a card -->
                @foreach (Faq faq in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@faq.Question</h5>
                            <p class="card-text">@faq.Answer</p>
                            <div class="d-flex justify-content-between">
                                <span>Topic: @faq.Topic.Name</span>
                                <span>Category: @faq.Category.Name</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>